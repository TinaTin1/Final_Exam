<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="AutomationExerciseSuite" parallel="tests" thread-count="2">

    <listeners>
        <listener class-name="listeners.TestListener"/>
    </listeners>

    <test name="UI Tests">
        <packages>
            <package name="tests.ui"/>
        </packages>
    </test>

    <test name="API Tests">
        <packages>
            <package name="tests.api"/>
        </packages>
    </test>

</suite>
